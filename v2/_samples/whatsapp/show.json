{
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{access_token}}",
                "type": "string"
            }
        ]
    },
    "method": "GET",
    "header": [],
    "url": {
        "raw": "{{endpoint}}api/v2/rcs/templates/:id",
        "host": [
            "{{endpoint}}api"
        ],
        "path": [
            "v2",
            "rcs",
            "templates",
            ":id"
        ],
        "variable": [
            {
                "key": "id",
                "value": "{{template_id}}"
            }
        ]
    }
}